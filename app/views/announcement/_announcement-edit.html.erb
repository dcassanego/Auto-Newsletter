<div class="span-14">
	
	<% if announcement.errors.any? %>
    <div class="error">
      <% announcement.errors.full_messages.each do |msg| %>
        <div><%= msg %></div>
      <% end %>
    </div>
  <% end %>
	
	<%= f.hidden_field :newsletter_id %>
	       
	<div class="span-4"><strong>Event Title</strong></div>
	<div class="span-10 last"><%= f.text_field :title %></div>
	
	<div class="span-4"><strong>Contact Email</strong></div>
	<div class="span-10 last"><%= f.text_field :contact %></div>
	
	<div class="span-4"><strong>Event Date</strong></div>
	<div class="span-10 last"><%= date_select("announcement", "announcementdate", 
	        :default => Date.today, :order => [:month, :day]) %>
	</div>
	
	<div class="span-4"><strong>Time</strong> (e.g. 12-1)</div>
	<div class="span-10 last"><%= f.text_field :time %></div>
	
	<div class="span-4"><strong>Location</strong> (e.g. e62-276)</div>
	<div class="span-10 last"><%= f.text_field :location %></div>
	
	<div class="span-4"><strong>Event URL</strong></div>
  <div class="span-10 last"><%= f.text_field :url %></div>
	
	<div class="span-4"><strong>Description</strong> (&lt; 250 words)</div>
	<div class="span-10 last"><%= f.text_area :description %></div>
	
	<div class="push-12 span-2 last">
	 <%= submit_tag buttonText %>
	</div>

</div>