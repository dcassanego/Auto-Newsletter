<!DOCTYPE HTML>
<html>
	<head>
		<title>Club Newsletter Submission</title>
	</head>
	<body>
		<div class="span-24">
			<h1><%= @newsletter.name %> Announcement Request</h1>
			<hr />
			<div class="span-14">
			<%= form_for :announcement, @announcement, :url => { :action => "add" } do |f| %>
			  
				<% if @announcement.errors.any? %>
				  <div class="error">
				    <% @announcement.errors.full_messages.each do |msg| %>
				      <div><%= msg %></div>
				    <% end %>
				  </div>
				<% end %>
				
			 <%= render :partial => "announcement-edit", :locals => {:f => f, :buttonText => "Next"} %>
			<% end %>
			</div>
			<div class="push-2 span-8 last">
				<h3>Announcements Already Submitted</h3>
				<% @upcoming.each do |announcement| %>
				  <div class="push-1 span-7 last"><%= announcement.title %></div>
				<% end %>
			</div>
		</div>
	</body>
</html>
