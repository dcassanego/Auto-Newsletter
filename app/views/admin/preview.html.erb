		  <%= render :partial => "templates/ni-newsletter", :locals => {:newsletter => @newsletter, :announcements => @announcements} %>
		</div>
		<hr />
		<div class="span-24">
      <div class="span-3">
      	<%= button_to "Back", {:action => "newsletter"}, :method => "get" %>
